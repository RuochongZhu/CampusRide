{
  "name": "campusride-integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for CampusRide application",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^17.2.1"
  },
  "devDependencies": {
    "jest": "^30.0.5",
    "supertest": "^7.1.4",
    "@jest/globals": "^30.0.5"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/setup.js",
      "!tests/fixtures/**"
    ]
  }
}