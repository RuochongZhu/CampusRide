# Backend environment variables template
# Copy this file to .env and replace with your actual values

# Server Configuration
NODE_ENV=development
PORT=3001
# Must match the actual frontend origin used in development (Vite default: 5173)
FRONTEND_URL=http://localhost:5173

# Supabase Database Configuration
# Get these from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_role_key_here

# JWT Configuration
# Generate a strong secret key for production
JWT_SECRET=your_strong_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Resend Email Service Configuration
# Get these from your Resend account dashboard
RESEND_API_KEY=re_your_api_key_here
RESEND_FROM_EMAIL=noreply@your-domain.com
RESEND_FROM_NAME=Campus Ride

# Database Configuration (Optional - if using local PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/campusride

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# API Configuration
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# WeChat Mini Program Configuration (for URL Link generation)
WECHAT_APPID=wx_your_appid_here
WECHAT_APPSECRET=your_wechat_appsecret_here
WECHAT_MINI_WEBVIEW_PATH=pages/index
# Optional. Leave empty to only launch mini program without deep-link query.
WECHAT_MINI_WEBVIEW_QUERY_KEY=
WECHAT_MINI_ENV_VERSION=release

# Security Notes:
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords for JWT_SECRET in production
# 3. Regenerate API keys regularly
# 4. Use environment-specific configurations for different deployments
