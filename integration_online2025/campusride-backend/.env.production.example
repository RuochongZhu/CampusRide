# ===================================
# 生产环境配置示例
# ===================================
# 上线前复制此文件为 .env.production 并填入实际值

# 服务器配置
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://your-domain.com

# Supabase配置
SUPABASE_URL=https://jfgenxnqpuutgdnnngsl.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# JWT配置 - 生产环境使用更短的有效期
JWT_SECRET=your_strong_jwt_secret_here_change_this  # 务必修改！
JWT_EXPIRES_IN=2h   # 生产环境：2小时
JWT_REFRESH_EXPIRES_IN=7d

# Resend邮件配置
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@your-domain.com
RESEND_FROM_NAME=Campus Ride

# 数据库配置
DATABASE_URL=postgresql://user:password@host:5432/campusride

# Redis配置
REDIS_URL=redis://your-redis-host:6379

# API配置
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
